<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/contact_details_title"
            app:menu="@menu/details_top_app_bar"
            app:navigationIcon="@drawable/back"
            app:titleTextAppearance="@style/Toolbar.TitleText"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="0dp"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@mipmap/profile"/>

            <ImageView
                android:id="@+id/decoration"
                android:layout_width="138dp"
                android:layout_height="138dp"
                app:layout_constraintStart_toStartOf="@id/photo"
                app:layout_constraintTop_toTopOf="@id/photo"
                app:layout_constraintEnd_toEndOf="@id/photo"
                app:layout_constraintBottom_toBottomOf="@id/photo"
                android:src="@drawable/decoration"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center"
                android:text="@string/contactName"
                android:textColor="@color/colorOnPrimary"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/decoration" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:gravity="center"
                android:text="@string/number"
                android:textColor="@color/colorOnPrimary"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/name"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_light"
                android:gravity="center"
                android:text="@string/email"
                android:textColor="@color/colorOnPrimary"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/phone"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/profile_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/email"/>

            <ImageView
                android:id="@+id/birthday_notify"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_notifications_active_24"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_divider"/>

            <TextView
                android:id="@+id/birthday_notify_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/birthday"
                android:fontFamily="@font/ubuntu"
                android:textColor="@color/colorOnPrimary"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/birthday_notify"
                app:layout_constraintTop_toTopOf="@+id/birthday_notify"
                app:layout_constraintBottom_toBottomOf="@id/birthday_notify"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/birthday_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:scaleX="1.3"
                android:scaleY="1.3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/birthday_notify"
                app:layout_constraintBottom_toBottomOf="@id/birthday_notify"/>

            <ImageView
                android:id="@+id/address_change"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_edit_location_24"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/birthday_notify"/>

            <TextView
                android:id="@+id/address_change_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:fontFamily="@font/ubuntu"
                android:textColor="@color/colorOnPrimary"
                app:layout_constraintStart_toStartOf="@+id/birthday_notify_text"
                app:layout_constraintTop_toTopOf="@+id/address_change"
                app:layout_constraintBottom_toBottomOf="@id/address_change"/>

            <ImageView
                android:id="@+id/address_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_delete_24"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address_change"/>

            <TextView
                android:id="@+id/address_delete_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address_delete"
                android:fontFamily="@font/ubuntu"
                android:textColor="@color/colorOnPrimary"
                app:layout_constraintStart_toStartOf="@+id/birthday_notify_text"
                app:layout_constraintTop_toTopOf="@+id/address_delete"
                app:layout_constraintBottom_toBottomOf="@id/address_delete"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/settings_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/address_delete"/>

            <ImageView
                android:id="@+id/birthdayIv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_calendar_month_24"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_divider"/>

            <TextView
                android:id="@+id/birthday_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/birthday_text"
                android:fontFamily="@font/ubuntu"
                android:textColor="@color/colorOnPrimary"
                app:layout_constraintStart_toStartOf="@+id/birthday_notify_text"
                app:layout_constraintTop_toTopOf="@+id/birthdayIv"
                app:layout_constraintBottom_toBottomOf="@id/birthdayIv"/>

            <ImageView
                android:id="@+id/address"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_location_on_24"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/birthdayIv"/>

            <TextView
                android:id="@+id/address_text"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="@string/address_text"
                android:fontFamily="@font/ubuntu"
                android:textColor="@color/colorOnPrimary"
                app:layout_constraintStart_toStartOf="@+id/birthday_notify_text"
                app:layout_constraintTop_toTopOf="@+id/address"
                app:layout_constraintBottom_toBottomOf="@id/address"/>

            <ImageView
                android:id="@+id/note"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_notes_24"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address"/>

            <TextView
                android:id="@+id/note_text"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="@string/note_text"
                android:fontFamily="@font/ubuntu"
                android:textColor="@color/colorOnPrimary"
                app:layout_constraintStart_toStartOf="@+id/birthday_notify_text"
                app:layout_constraintTop_toTopOf="@+id/note"
                app:layout_constraintBottom_toBottomOf="@id/note"/>

